{
  "name": "subaton-timer-bot",
  "version": "0.2.1",
  "description": "Subaton / Euroton donation timer bot",
  "main": "server.js",
  "bin": "server.js",
  "author": "daZepelin",
  "license": "ISC",
  "scripts": {
    "start": "node .",
    "dev": "nodemon server.js",
    "build": "pkg .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "_postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "release": "standard-version"
  },
  "pkg": {
    "scripts": [
      "server.js",
      "public/**/*.js"
    ],
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "nodemon": "^2.0.18",
    "pkg": "^5.8.1",
    "socket.io": "^4.5.1",
    "standard-version": "^9.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "husky": "^8.0.1",
    "pinst": "^3.0.0"
  }
}
